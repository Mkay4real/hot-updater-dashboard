# ===================================
# HOT UPDATER DASHBOARD CONFIGURATION
# ===================================

# -------------------------
# Database Configuration
# -------------------------

# Choose your database provider: supabase, aws, aws-rds, postgres, cloudflare-d1, dynamodb, or mock
# 'aws' = Hot Updater's official AWS S3 provider (s3Storage + s3Database)
# 'aws-rds' = AWS RDS PostgreSQL + S3 (custom dashboard implementation)
DB_PROVIDER=aws

# -------------------------
# Supabase Configuration
# (Only needed if DB_PROVIDER=supabase)
# -------------------------

# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# -------------------------
# PostgreSQL Configuration
# (Only needed if DB_PROVIDER=postgres)
# -------------------------

# Example: postgresql://username:password@host:5432/database
DATABASE_URL=postgresql://user:password@localhost:5432/hotupdater

# -------------------------
# Cloudflare D1 Configuration
# (Only needed if DB_PROVIDER=cloudflare-d1)
# -------------------------

CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
CLOUDFLARE_D1_DATABASE_ID=your-database-id

# -------------------------
# AWS S3 Configuration (Hot Updater Official Provider)
# (Only needed if DB_PROVIDER=aws)
# Uses Hot Updater's s3Storage + s3Database (metadata stored in S3)
# -------------------------

# These should match your hot-updater.config.ts in your React Native project
HOT_UPDATER_S3_BUCKET_NAME=your-bucket-name
HOT_UPDATER_S3_REGION=us-east-1
HOT_UPDATER_S3_ACCESS_KEY_ID=your-access-key-id
HOT_UPDATER_S3_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: CloudFront CDN URL (if configured in Hot Updater)
# HOT_UPDATER_CDN_URL=https://your-distribution.cloudfront.net

# -------------------------
# AWS RDS + S3 Configuration
# (Only needed if DB_PROVIDER=aws-rds)
# Custom implementation: RDS PostgreSQL for metadata + S3 for bundles
# -------------------------

# RDS PostgreSQL (for metadata/database)
AWS_RDS_HOST=your-rds-instance.region.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DATABASE=hotupdater
AWS_RDS_USER=postgres
AWS_RDS_PASSWORD=your-password
AWS_RDS_SSL=true

# S3 (for bundle file storage)
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=hot-updater-bundles
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-key

# -------------------------
# AWS DynamoDB Configuration (⚠️ EXPERIMENTAL)
# (Only needed if DB_PROVIDER=dynamodb)
# WARNING: Not officially supported by Hot Updater
# -------------------------

# AWS_DYNAMODB_REGION=us-east-1
# AWS_DYNAMODB_TABLE_NAME=hot-updater-bundles
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=your-secret-key

# -------------------------
# Hot Updater Configuration
# -------------------------

# Path to your React Native project (where hot-updater.config.ts is located)
HOT_UPDATER_PROJECT_PATH=/path/to/your/react-native-project

# -------------------------
# Dashboard Configuration
# -------------------------

# Dashboard URL (for production deployments)
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000

# Admin email (optional, for notifications)
ADMIN_EMAIL=admin@example.com

# -------------------------
# Authentication (Clerk - REQUIRED FOR PRODUCTION)
# -------------------------

# Get these from: https://clerk.com (free tier: 10k monthly active users)
# Sign up, create a new application, and copy your API keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk URLs (usually don't need to change these)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Optional: Comma-separated list of authorized email addresses/patterns
# If set, only matching emails can access the dashboard
# Supports:
#   - Exact emails: john@company.com
#   - Wildcard domain: *@company.com (allows anyone from company.com)
#   - Wildcard subdomain: *@*.company.com (allows anyone from any subdomain)
# Examples:
#   AUTHORIZED_EMAILS=john@company.com,jane@company.com,*@partner.com
#   AUTHORIZED_EMAILS=*@yourcompany.com,external@partner.com

# Optional: NextAuth.js (alternative to Clerk, not needed if using Clerk)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# -------------------------
# Webhook Configuration (Optional)
# -------------------------

# Slack webhook for deployment notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for deployment notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# -------------------------
# Analytics (Optional)
# -------------------------

# If you want to add analytics tracking
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# -------------------------
# Development Settings
# -------------------------

# Set to 'true' to use mock data instead of real database
USE_MOCK_DATA=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===================================
# NOTES:
# 1. Copy this file to .env.local
# 2. Never commit .env.local to version control
# 3. Update the values with your actual credentials
# 4. Restart your dev server after changing values
# ===================================
